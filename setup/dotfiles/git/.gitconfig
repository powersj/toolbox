[alias]
    l = log --color --graph --pretty=format:'%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %C(bold blue)[%an]%Creset' --date=short --abbrev-commit

[core]
    editor = vim

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[push]
    default = simple

[log]
    decorate = auto


