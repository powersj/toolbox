# Settings
# ---
set editor = 'vim'
set copy=no
set sleep_time = 0
set mail_check = 60
set smart_wrap
set beep_new
set sidebar_visible = no
set tilde
unset markers

bind pager <up> previous-line
bind pager <down> next-line

# Coloring
source ~/.mutt/colors.molokai

# Accounts
# ---
# Default Account
source ~/.mutt/mrpowersj

# Folder hooks
folder-hook 'mrpowersj' 'source ~/.mutt/mrpowersj.dir'
folder-hook 'canonical' 'source ~/.mutt/canonical.dir'

# Macros for switching accounts
macro index,pager <F2> '<enter-command>source ~/.mutt/mrpowersj<enter><change-folder>!<enter>'
#macro index,pager <F2> '<sync-mailbox><enter-command>source ~/.mutt/mrpowersj<enter><change-folder>!<enter>'
macro index,pager <F3> '<enter-command>source ~/.mutt/canonical<enter><change-folder>!<enter>'
#macro index,pager <F3> '<sync-mailbox><enter-command>source ~/.mutt/canonical<enter><change-folder>!<enter>'
