[push]
    default = simple

[log]
    decorate = auto

[alias]
    l = log --color --graph --pretty=format:'%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %C(bold blue)[%an]%Creset' --date=short --abbrev-commit

[core]
    editor = vim

[color]
    ui = auto
[color "branch"]
    current = black reverse
    local = black
    remote = green
[color "diff"]
    meta = black bold
    frag = magenta bold
    old = red
    new = green
[color "status"]
    added = black 
    changed = green
    untracked = cyan

[gitubuntu]
    lpuser = powersj

[man "git-ubuntu-man"]
    cmd = git-ubuntu.man
[man]
    viewer = git-ubuntu-man

[url "git+ssh://powersj@git.launchpad.net/"]
